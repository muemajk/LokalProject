<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bars"

    android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView86"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="ZIKI"
            android:textAlignment="viewStart"
            android:textColor="@color/switchcolor"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView89"
            app:layout_constraintStart_toEndOf="@+id/imageView30"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/textView86"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/btn_radio" />

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/textView86"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/exo_edit_mode_logo" />

        <TextView
            android:id="@+id/textView89"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Arriving at easy way station "
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.067"
            app:layout_constraintStart_toEndOf="@+id/imageView30"
            app:layout_constraintTop_toBottomOf="@+id/textView86" />

        <LinearLayout
            android:id="@+id/oridisplayid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"

            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView89">

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:text="Matatus"
                android:textAlignment="center"
                android:textColor="@color/pickorient"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:text="Friends"
                android:textAlignment="center"
                android:textColor="@color/orientchoice"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:text="You"
                android:textAlignment="center"
                android:textColor="@color/orientchoice"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="45dp"
            android:layout_height="35dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView33"
            app:layout_constraintStart_toEndOf="@+id/imageView31"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/adobe_20180213_184006" />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView32"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/adobe_20180213_184307" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.Toolbar>